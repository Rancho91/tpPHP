{% extends 'base.html.twig' %}

{% block body %}
	<div class="container py-4">
		<div class="row">

			{% for product in products %}
				<div class="col-md-4 mb-4">

					<div class="card bg-dark" style="width: 18rem">
						<img src="{{ asset ( productImg~product.image) }}" class="card-img-top"/>
						<div class="card-body">
							<h1 class="card-title text-white" style="font-size: 1.5rem;">{{product.name}}</h1>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
