{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="card-body">
			<table class="table  table-dark my-4 p-2">
				<thead>
					<tr>
						<th scope="col">Edit</th>
						<th scope="col">Name</th>
						<th scope="col">Disable/Enable</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td scope="row">
								<a class="btn btn-success" href="{{ path ('categoriesCreate', {'id': category.id}) }}">
									Edit
								</a>
							</td>
							<td>
								{{category.name}}
							</td>
                            <td>
								{% if category.deleted ==0 %}
									<button class="btn btn-danger" onclick="toggleProductState('{{ path ('deletedCategory', {'id': category.id}) }}', this)">
										Disable
									</button>

								{% else %}
									<button type="submit" class="btn btn-success" onclick="toggleProductState('{{ path ('deletedCategory', {'id': category.id}) }}', this)">

										Enable
									</button>
								{% endif %}
							</td>
						</tr>
					</td>
				</tbody>
			</tr>
		{% endfor %}
	</tbody>
</table></div></div>{% endblock %}{% block javascripts %}<script type=" text/javascript" src=" {{ asset('js/disableProduct.js')}} " </script> {% endblock %}
