{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="card-body">
			<select class="form-select" aria-label="Default select example">
				<option selected>Open this select menu</option>
				{% for category in categories %}
					<option value="{{category.id}}">{{category.name}}
					</option>
				{% endfor %}
			</select>
			<table class="table  table-dark my-4 p-2">
				<thead>
					<tr>
						<th scope="col">Editar</th>
						<th scope="col">Nombre</th>
						<th scope="col">Imagen</th>
						<th scope="col">Categoria</th>
						<th scope="col">Deshabilitar</th>
					</tr>
				</thead>
				<tbody>
					{% for product in products %}
						<tr>
							<td scope="row">
								<a class="btn btn-success" href="{{ path ('newproduct', {'id': product.id}) }}">
									Editar
								</a>
							</td>
							<td>
								{{product.producto}}
							</td>
							<td><img src="{{ asset ( productImg~product.image) }}" class="image"></td>
							<td>
								{{product.categoria}}
							</td>
							<td>
								<form action="{{ path ('deleted', {'id': product.id}) }}" method="POST">
									{% if product.deleted ==0 %}
										<button type="submit" class="btn btn-danger ">
											Deshabilitar
										</button>
									{% else %}
										<button type="submit" class="btn btn-success">
											Habiltiar
										</button>
									{% endif %}
								</form>
							</td>


						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>


{% endblock %}
